script Luxray_Battle_Decision {
    lock // Locks the Player in Place during dialogue.
    faceplayer // NPC will face the player.
    playmoncry(SPECIES_LUXRAY, CRY_MODE_NORMAL) // Macro that will play Luxray's Cry.
    waitse // Waits for the sound effect to end. In this case Luxray's Cry.
    msgbox("Luxray!") // What Luxray will say.
    waitmessage
    msgbox("{PLAYER}: E-Easy there kitty...") // The Player will respond.
    playmoncry(SPECIES_LUXRAY, CRY_MODE_NORMAL) // Macro that will play Luxray's Cry again.
    msgbox("Luxray: Lux-RAY!") // What Luxray will say again.
    waitse // Waits for the sound effect to end. In this case Luxray's Cry.
    waitmessage // Waits on the third-person dialogue to play
    msgbox(format("The Luxray seems very hostile. It seems like it wants to battle.")) // Dialgoue in Third-Person.
    msgbox("Do you want to battle Luxray?", MSGBOX_YESNO) // Yes or No Choice dialogue for Luxray Battle.
    
    if(var(VAR_RESULT) == YES) { // If the Player chose yes then excecute the script below.
        call(Luxray_Battle)
        end }
        elif(var(VAR_RESULT) != YES){
            call(RanAway)
        }
}

script Won_or_Caught {
	fadescreen(FADE_TO_BLACK)
	removeobject(15)
	fadescreen(FADE_FROM_BLACK)
	return
}
 
script RanAway {
	
	fadescreen(FADE_TO_BLACK)
    delay(20)
	removeobject(15)
	fadescreen(FADE_FROM_BLACK)
	msgbox("Luxray ran away.")
    releaseall
	return
}

script LuxrayTrigger {
    lockall
    setflag(FLAG_UNUSED_0x021)
    applymovement(15, LuxrayRun)
    waitmovement(0)
    releaseall
}

movement LuxrayRun {
    walk_fast_down * 4
}

script Luxray_Battle {
	lockall
	setflag(FLAG_UNUSED_0x022)
	playmoncry(SPECIES_LUXRAY, CRY_MODE_NORMAL)
	delay(40)
	waitmoncry
	setwildbattle(SPECIES_LUXRAY, 50, ITEM_ELECTRIUM_Z)
    dowildbattle
    specialvar(VAR_RESULT, GetBattleOutcome)

	if(var(VAR_RESULT) == B_OUTCOME_CAUGHT){
		call(Won_or_Caught)
	}
	elif(var(VAR_RESULT) == B_OUTCOME_WON){
		call(Won_or_Caught)
	}
	elif(var(VAR_RESULT) == B_OUTCOME_RAN){
		call(RanAway)
	}
	elif(var(VAR_RESULT) == B_OUTCOME_PLAYER_TELEPORTED){
		call(RanAway)
	}
	waitmessage
	releaseall
}

