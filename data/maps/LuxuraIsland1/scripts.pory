	applymovement(11,innnn)
	waitmovement(0)
	facefollower
	namebox(name4)
	msgbox(format("{COLOR RED}{SHADOW LIGHT_GRAY}Master Xylar, Listen to me, from now no matter what happens don't look back and run as fast as you can\pGo! and remember it's not your fault."),MSGBOX_AUTOCLOSE)
	hidenamebox
	namebox(Xylar)
	msgbox(format("{COLOR BLUE}{SHADOW LIGHT_GRAY}Mira, why are you talking like this?"))
	hidenamebox
	namebox(name4)
	msgbox(format("{COLOR RED}{SHADOW LIGHT_GRAY}Go hurry!"),MSGBOX_AUTOCLOSE)
	hidenamebox
	applymovement(OBJ_EVENT_ID_PLAYER,byee)
	waitmovement(0)
	applymovement(OBJ_EVENT_ID_FOLLOWER,lok)
	waitmovement(0)
	msgbox(format("{COLOR RED}{SHADOW LIGHT_GRAY}Aww, how touching, He's running away.\pToo bad you won't get to see him grow up"),MSGBOX_AUTOCLOSE)
	namebox(name4)
	msgbox(format("{COLOR RED}{SHADOW LIGHT_GRAY}And too bad for you since you won't be able to capture him."),MSGBOX_AUTOCLOSE)
	hidenamebox
	msgbox(format("{COLOR RED}{SHADOW LIGHT_GRAY}What?\pYou dare mock me.\pKill her this instant. "))
	msgbox(format("{COLOR BLUE}{SHADOW LIGHT_GRAY}Say goodbye, lady.This is the end of the road for you."),MSGBOX_AUTOCLOSE)
	msgbox(format("{COLOR BLUE}{SHADOW LIGHT_GRAY}Electrode!"))
    applymovement(13,visible)
	waitmovement(0)
	msgbox(format("{COLOR BLUE}{SHADOW LIGHT_GRAY}Use EXPLOSION"))
