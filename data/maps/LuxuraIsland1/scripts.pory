	namebox(name4)
	msgbox(format("(If we both try to escape we will end up getting captured.)\p{COLOR RED}{SHADOW LIGHT_GRAY}Master Xylar, I'll slow them down.\pYou should run towards the forest quickly."),MSGBOX_AUTOCLOSE)
