	walk_up
	walk_right
	walk_in_place_faster_up
	delay_16
	step_end
}

movement SunriseVillage_EldersHouse_Movement_RivalWalkAwayFromTrapinch {
	walk_left
	walk_down
	walk_in_place_faster_up
	delay_16
	step_end
}


movement SunriseVillage_EldersHouse_Movement_RivalWalkUpToAron {
