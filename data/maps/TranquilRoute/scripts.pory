	walk_left * 5
	walk_up * 3
	face_up
}

movement TranquilRoute_PlayerGoesSeeGarden {
	walk_left * 6
	walk_up * 2
}

movement TranquilRoute_CutMasterWalkLeft {
	walk_left * 2
}

movement TranquilRoute_CutMasterWalkRight {
	walk_right * 3
}

movement TranquilRoute_CutMasterWalkBackToPlayer {
	walk_left
	walk_in_place_faster_down
}
